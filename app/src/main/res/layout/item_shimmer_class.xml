<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/recyclerViewMargin"
	android:backgroundTint="@color/cardBackground"
	app:cardCornerRadius="8dp"
	app:cardElevation="@dimen/cardElevation">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/profileTextDP">

		<TextView
			android:id="@+id/chapterText"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="@dimen/marginForTIL"
			android:background="@color/shimmerColor"
			android:gravity="start"
			android:text="Вопрос 1"
			android:textColor="@color/shimmerColor"
			android:textSize="@dimen/profileNameBigTextSize"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<ImageView
			android:id="@+id/deleteQuestion"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_marginEnd="@dimen/marginForTIL"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/ic_delete_shimmer" />
	</androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>