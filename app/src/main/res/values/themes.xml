<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Knigolyub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryVariant">@color/violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/comic_sans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Reader" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/comic_sans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomCornerRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="height">270dp</item>
    </style>

    <style name="OllCornersRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="height">270dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="civ_border_color"> @color/violet</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="MaterialBtnPrev" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor"> @color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/testBtnPrev</item>
        <item name="iconSize">@dimen/btnIconSize</item>
        <item name="icon"> @drawable/ic_baseline_skip_previous_24</item>
        <item name="borderRound"> @dimen/cardAllCornersRadius</item>
        <item name="textFillColor">@color/white</item>
        <item name="minWidth">@dimen/testButtonSize</item>
        <item name="android:elevation"> @dimen/cardElevation</item>
    </style>

    <style name="MaterialBtnNext" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor"> @color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/testBtnNext</item>
        <item name="iconSize">@dimen/btnIconSize</item>
        <item name="icon"> @drawable/ic_next</item>
        <item name="borderRound"> @dimen/cardAllCornersRadius</item>
        <item name="textFillColor">@color/white</item>
        <item name="minWidth">@dimen/testButtonSize</item>
        <item name="android:elevation"> @dimen/cardElevation</item>
    </style>

    <style name="MaterialBtnPassTheTest" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor"> @color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/testBtn</item>
        <item name="iconSize">@dimen/btnIconSize</item>
        <item name="borderRound"> @dimen/cardAllCornersRadius</item>
        <item name="textFillColor">@color/white</item>
        <item name="minWidth">@dimen/testButtonSize</item>
        <item name="android:elevation"> @dimen/cardElevation</item>
    </style>

</resources>